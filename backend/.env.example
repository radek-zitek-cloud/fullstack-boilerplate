# Database (relative to backend/ folder, ../data/ puts it in project root)
DATABASE_URL=sqlite+aiosqlite:///../data/app.db

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# First admin user (created on startup)
FIRST_ADMIN_EMAIL=admin@example.com
FIRST_ADMIN_PASSWORD=admin123

# Email (SMTP)
MAIL_USERNAME=radek@zitek.cloud
MAIL_PASSWORD=
MAIL_FROM=radek@zitek.cloud
MAIL_PORT=587
MAIL_SERVER=mail.zitek.cloud
MAIL_STARTTLS=True
MAIL_SSL_TLS=False
# Set to False for mail servers with self-signed certificates or hostname mismatch
MAIL_VALIDATE_CERTS=False

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# File Uploads (relative to backend/ folder, ../uploads/ puts it in project root)
UPLOAD_DIR=../uploads
MAX_UPLOAD_SIZE=10485760

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:5173

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
